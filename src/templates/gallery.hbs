{{#each this}}

  <div class='photo-card'>

    <img
      class='photo'
      src='{{webformatURL}}'
      alt='{{tags}}'
      loading='lazy'
      width='400'
      height='250'
    />
    <div class='info'>
      <p class='info-item'>
        <b class='info-value'>Likes</b>
        <br />{{likes}}
      </p>
      <p class='info-item'>
        <b class='info-value'>Views</b>
        <br />{{views}}
      </p>
      <p class='info-item'>
        <b class='info-value'>Comments</b>
        <br />{{comments}}
      </p>
      <p class='info-item'>
        <b class='info-value'>Downloads</b>
        <br />{{downloads}}
      </p>
    </div>
  </div>
{{/each}}